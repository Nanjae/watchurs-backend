type User {
  id: ID! @id
  name: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Broadcaster {
  id: ID! @id
  bId: String! @unique
  bName: String! @unique
  bAvatar: String!
  bPlatform: String!
  bSummoner: Summoner @relation(link: INLINE name: "SummonerOfBroadcaster" onDelete: CASCADE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Summoner {
  id: ID! @id
  sId: String!
  sName: String!
  sAvatar: String!
  sTier: String @default(value:"UNRANKED")
  sRank: String @default(value:"UNRANKED")
  sPoints: Int @default(value:0)
  sWins: Int @default(value:0)
  sLosses: Int @default(value:0)
  sBroadcaster: Broadcaster @relation(name: "SummonerOfBroadcaster")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}