type User {
  id: ID! @id
  name: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Broadcaster {
  id: ID! @id
  bId: String!
  bName: String!
  bSummoner: Summoner @relation(link: INLINE name: "SummonerOfBroadcaster" onDelete: CASCADE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Summoner {
  id: ID! @id
  sId: String!
  sName: String!
  sTier: String! @default(value:"Unranked")
  sRank: String! @default(value:"Unranked")
  sPoints: Int!
  sWins: Int!
  sLosses: Int!
  sBroadcaster: Broadcaster @relation(name: "SummonerOfBroadcaster")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}