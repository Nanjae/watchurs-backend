  dFirstRiftHerald: [Boolean] @scalarList(strategy: RELATION)
  dFirstDragon: [Boolean] @scalarList(strategy: RELATION)
  dFirstBaron: [Boolean] @scalarList(strategy: RELATION)
  dFirstTower: [Boolean] @scalarList(strategy: RELATION)
  dFirstInhibitor: [Boolean] @scalarList(strategy: RELATION)
  dRiftHeraldKills: [Int] @scalarList(strategy: RELATION)
  dDragonKills: [Int] @scalarList(strategy: RELATION)
  dBaronKills: [Int] @scalarList(strategy: RELATION)
  dTowerKills: [Int] @scalarList(strategy: RELATION)
  dChampLevel: [Int] @scalarList(strategy: RELATION)
  dKills: [Int] @scalarList(strategy: RELATION)
  dDeaths: [Int] @scalarList(strategy: RELATION)
  dAssists: [Int] @scalarList(strategy: RELATION)
  dVisionScore: [Int] @scalarList(strategy: RELATION)
  dWardsPlaced: [Int] @scalarList(strategy: RELATION)
  dWardsKilled: [Int] @scalarList(strategy: RELATION)
  dVisionWardsBought: [Int] @scalarList(strategy: RELATION)
  dLargestKillingSpree: [Int] @scalarList(strategy: RELATION)
  dLargestMultiKill: [Int] @scalarList(strategy: RELATION)
  dKillingSprees: [Int] @scalarList(strategy: RELATION)
  dDoubleKills: [Int] @scalarList(strategy: RELATION)
  dTripleKills: [Int] @scalarList(strategy: RELATION)
  dQuadraKills: [Int] @scalarList(strategy: RELATION)
  dPentaKills: [Int] @scalarList(strategy: RELATION)
