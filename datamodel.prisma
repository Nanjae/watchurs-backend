type User {
  id: ID! @id
  name: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Broadcaster {
  id: ID! @id
  bId: String! @unique
  bName: String! @unique
  bAvatar: String! @default(value:"https://static-cdn.jtvnw.net/jtv_user_pictures/1e5cf5ba-97cd-426a-a9c9-b634054c4b19-profile_image-300x300.png")
  bPlatform: String!
  bSummoner: Summoner @relation(link: INLINE name: "SummonerOfBroadcaster" onDelete: CASCADE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Summoner {
  id: ID! @id
  sId: String!
  sName: String!
  sTier: String @default(value:"Unranked")
  sRank: String @default(value:"Unranked")
  sPoints: Int @default(value:0)
  sWins: Int @default(value:0)
  sLosses: Int @default(value:0)
  sBroadcaster: Broadcaster @relation(name: "SummonerOfBroadcaster")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}